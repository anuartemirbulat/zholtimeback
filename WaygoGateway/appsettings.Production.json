{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Clients": [
        "http://localhost:4200"
    ],
    "ReverseProxy": {
        "Routes": {
            "RegionalRidesServiceRoute": {
                "ClusterId": "RegionalRidesServiceCluster",
                "Match": {
                    "Path": "/api/regional/{**catchAll}"
                }
            },
            "IdentityRoute": {
                "ClusterId": "IdentityCluster",
                "Match": {
                    "Path": "/api/identity/{**catchAll}"
                }
            }
        },
        "Clusters": {
            "RegionalRidesServiceCluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://regionalrides.api:8080"
                    }
                }
            },
            "IdentityCluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://identity.api:8080"
                    }
                }
            }
        }
    }
}
